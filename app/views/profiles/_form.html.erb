<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :role, style: "display: block" %>
    <%= form.select :role, Profile.roles.map { |key, value| [key.humanize, key] }, include_blank: true %>
  </div>

  <% if @profile.worker %>
    <%= form.fields_for :worker, @worker do |ffw| %>
      <div>
        <%= ffw.label :worker_type, style: "display: block" %>
        <%= ffw.text_field :worker_type, disabled: true %>
      </div>

      <div>
        <%= ffw.label :personal_email, style: "display: block" %>
        <%= ffw.text_field :personal_email, disabled: true %>
      </div>

      <div>
        <%= ffw.label :phone, style: "display: block" %>
        <%= ffw.text_field :contact_phone, disabled: true %>
      </div>

      <div>
        <%= ffw.label :payroll_workerId, style: "display: block" %>
        <%= ffw.text_field :payroll_workerId, disabled: true %>
      </div>
    <% end %>
  <% end %>

  <% if @profile.address %>
    <%= form.fields_for :address, @address do |ff| %>
      <div>
        <%= ff.label :address_line_1, style: "display: block" %>
        <%= ff.text_field :streetLineOne, disabled: true %>
      </div>

      <div>
        <%= ff.label :address_line_2, style: "display: block" %>
        <%= ff.text_field :streetLineTwo, disabled: true %>
      </div>

      <div>
        <%= ff.label :city, style: "display: block" %>
        <%= ff.text_field :city, disabled: true %>
      </div>

      <div>
        <%= ff.label :state, style: "display: block" %>
        <%= ff.text_field :state, disabled: true %>
      </div>

      <div>
        <%= ff.label :zip_code, style: "display: block" %>
        <%= ff.text_field :zip_code, disabled: true %>
      </div>
    <% end %>
  <% end %>

<div class="actions">
  <%= form.submit %>
</div>

<% end %>
