<%= form_with(model: visit) do |form| %>
  <% if visit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
        <% visit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date_of_service, style: "display: block" %>
    <%= form.date_field :date_of_service %>
  </div>

  <div>
    <%= form.label :patient_id, style: "display: block" %>
    <%= form.select(:patient_id, Patient.all.order('last_name ASC').collect { |patient| [ patient.name, patient.id ] }, { include_blank: true }, { "class": "chosen-select", "data-placeholder": 'Select Patient' }) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
