<p style="color: green"><%= notice %></p>

<%# render @patient %>

<div class="">
  <h3><strong>Name:</strong> <%= patient_full_name(@patient) %></h3>
  <p><strong>Date of Birth:</strong> <%= @patient.birthdate %></p>
  <p><strong>Sex:</strong> <%= @patient.sex.first.capitalize %></p>
</div>

<div>
  <%= link_to "Edit this patient", edit_patient_path(@patient) %> |
  <%= link_to "Back to patients", patients_path %>

  <%= button_to "Destroy this patient", @patient, method: :delete %>
</div>
