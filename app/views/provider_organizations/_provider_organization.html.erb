<div id="<%= dom_id provider_organization %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= provider_organization.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= provider_organization.kind.humanize %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show", provider_organization, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit", edit_provider_organization_path(provider_organization), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
