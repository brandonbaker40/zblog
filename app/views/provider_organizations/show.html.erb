<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @provider_organization %>

    <div class="flex flex-wrap space-x-2">
      <%= link_to "Edit", edit_provider_organization_path(@provider_organization), class: "text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-3" %>
      <%= button_to "Delete", provider_organization_path(@provider_organization), method: :delete, class: "ml-2 rounded-lg py-3 px-5 bg-red-500 inline-block font-medium text-white" %>
      <%= link_to "Provider Organizations List", provider_organizations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-400 inline-block font-medium" %>
    </div>
  </div>
</div>
